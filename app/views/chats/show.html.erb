<div class=container>
  <h1><%= @other.email %></h1>
  <div>
    <% @chat.messages.each do |message| %>
    <div class="message  <%= message.user == current_user ? 'current' : 'other' %>">
      <p><%= message.content %></p>
    </div>
    <% end %>
  </div>
  <div style="text-align: right;">
    <%= simple_form_for [@chat, @message] do |f| %>
      <%= f.input :content, label: false, autofocus: true, placeholder: "Message here...", class: 'fill-content' %>
      <%= f.submit "Send" %>
    <% end %>
  </div>
</div>
