<div class="message  <%= message.user == current_user ? 'current' : 'other' %>">
  <div id="message-<%=message.id %>">
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
