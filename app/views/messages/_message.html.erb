<div class="message" data-chat-subscription-target="message" data-sender-id=<%= message.user_id%>>
  <div id="message-<%=message.id %>">
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
