        <!-- This div is centered and takes 6 columns -->
      <h1>PAIRS</h1>
      <%# <h3>Description Here</h3> %>
      <div class="sign-in" >
        <% if user_signed_in? %>
        <%= link_to "New Pairing Session", pairing_sessions_path, class: 'home-btn'%>
        <% else %>
        <ul>
        <li><%= link_to 'Sign In', new_user_session_path, class: 'home-btn2'%></li>
        <li><%= link_to 'Sign Up', new_user_session_path, class: 'home-btn'%></li>
