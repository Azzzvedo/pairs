<h4 class="pairing-session-header">What would you like to do?</h4>

<% PairingSession::ACTIVITIES.each do |activity| %>
  <div data-controller="activities">
      <div class="selector-card d-flex justify-content-around" data-action="click->activities#selectActivity" >
        <div class="logo-wrapper"><p class="logo ms-3"><%= PairingSession::ACTIVITY_LOGOS[activity.to_sym] %></p></div>
        <div class="name-wrapper"><h1 data-activities-target="name"><%= activity.capitalize %></h1></div>
      </div>
  </div>
<% end %>
