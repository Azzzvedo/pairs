
<div class="container">

  <%= simple_form_for @pairing_session do |f| %>
    <%= f.input :activity %>
      <div style="width: 100%; height: 80vh;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    <%= f.input :address %>
    <%= f.input :time %>
    <%= f.input :description %>

    <%= f.button :submit %>
  <% end %>

</div>
