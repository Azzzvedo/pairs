<!-- This div is centered and takes 6 columns -->

<div class="navbar">
  <ul class="p-0">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to my_profile_path(current_user.id) do %>
          <i class="<%= class_names('fas fa-user fa-2x fas-items', {active: current_page?(my_profile_path(current_user.id))})%>"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to pairing_sessions_path do %>
          <i class="<%= class_names('fas fa-table-tennis fa-2x fas-items', {active: current_page?(pairing_sessions_path)})%>"></i>
        <% end %>
      </li>
        <li class="nav-item nav-notification-container">
          <% if current_user.unseen_requests %>
            <div class="chat-notifications <%= current_user.unseen_requests.count == 0 ? 'd-none' : "" %>">
            <%= current_user.unseen_requests.count == 0 ? "" : current_user.unseen_requests.count %>
           </div>
          <% end %>
            <%= link_to pairing_requests_path do %>
              <i class="<%= class_names('fas fa-hand-paper fa-2x fas-items', {active: current_page?(pairing_requests_path)})%>"></i>
            <% end %>
        </li>
      <li class="nav-item nav-notification-container" id="navbar-chat-icon">
        <% if current_user.unseen_messages %>
          <div class="chat-notifications <%= current_user.unseen_messages.count == 0 ? 'd-none' : "" %>">
            <% if Chat.where(sender: current_user).or(Chat.where(recipient: current_user)).any? %>
              <%= current_user.unseen_messages.count == 0 ? "" : current_user.unseen_messages.count %>
            <% end %>
          </div>
        <% end %>
        <%= link_to chats_path do %>
          <i class="<%= class_names('fas fa-comment fa-2x fas-items', {active: current_page?(chats_path)})%>"></i>
        <% end %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to root_path do %>
          <i class="<%= class_names('fas fa-home fa-2x fas-items', {active: current_page?(root_path)})%>"></i>
        <% end %>
      <li class="nav-item">
        <%= link_to new_user_registration_path do %>
          <i class="<%= class_names('fas fa-sign-in-alt fa-2x fas-items', {active: current_page?(new_user_registration_path)})%>"></i>
        <% end %>
    <% end %>
  </ul>
</div>

